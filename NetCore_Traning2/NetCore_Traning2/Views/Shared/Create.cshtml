@model NetCore_Traning2.Models.Product
@{
    ViewData["Title"] = "Create";
}

@using (Html.BeginForm("save", "Product", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("Product Id")
        @Html.TextBoxFor(d => d.ProductId)
        @Html.ValidationMessageFor(d=> d.ProductId)
    </div>
    <div class="form-group">
        @Html.Label("Product Name")
        @Html.TextBoxFor(d => d.ProductName)
        @Html.ValidationMessageFor(d => d.ProductName)
    </div>
    <div class="form-group">
        @Html.Label("Product Code")
        @Html.TextBoxFor(d => d.ProductCode)
        @Html.ValidationMessageFor(d => d.ProductCode)
    </div>
    <div class="form-group">
        @Html.Label("Product Price")
        @Html.TextBoxFor(d => d.Price)
        @Html.ValidationMessageFor(d => d.Price)
    </div>

    <div class="form-group">
        @Html.SubmitButton("Save","btnSubmit")
        @Html.SubmitButton("Cancel","btnCancel")
        @Html.ValidationSummary();
    </div>
}
